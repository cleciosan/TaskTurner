<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- App Accent Dark -->
    <SolidColorBrush x:Key="AccentDark" Color="#FF164863"/>
    
    <!-- Task List background -->
    <SolidColorBrush x:Key="TaksListBackground" Color="#FFECECEC"/>

    <!-- Task View background -->
    <SolidColorBrush x:Key="WindowBackground" Color="#FFFFFFFF"/>

    <!-- Task Status background -->
    <SolidColorBrush x:Key="TaskStatusBackground" Color="#FFF6F6F6"/>

    <!-- Default Text Colour -->
    <SolidColorBrush x:Key="Default Text" Color="#FF474747"/>


    <!--Importance Colours -->
    
    <!-- Low Importance -->
    <SolidColorBrush x:Key="Importance-Low" Color="#FF0CAFF4"/>

    <!-- Low Importance -->
    <SolidColorBrush x:Key="Importance-Med" Color="#FF2AD985"/>

    <!-- Low Importance -->
    <SolidColorBrush x:Key="Importance-High" Color="#FFCA2C2C"/>

    <!-- Low Importance -->
    <SolidColorBrush x:Key="Importance-Crit" Color="#FFF4B30C"/>
</ResourceDictionary>